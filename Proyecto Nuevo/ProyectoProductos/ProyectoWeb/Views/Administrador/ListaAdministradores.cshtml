@model List<ET.Administrador>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-2">
        <div>
            <h3>Gestión</h3>
            @Html.ActionLink("Gestión Administradores", "ListaAdministradores", "Administrador")<br />
            @Html.ActionLink("Gestión Clientes", "ListaClientes", "Cliente")<br />
            @Html.ActionLink("Gestión Artículos", "ListaArticulos", "Articulo")<br />
            @Html.ActionLink("Gestión Categorías", "ListaCategorias", "Categoria")<br />
            @Html.ActionLink("Gestión Pedidos", "Historico", "Pedido")
        </div>
    </div>
    <div class="col-md-10">
        <h2>
            Lista Administradores
            <button type="button" class="btn btn-success pull-right" OnClick="location.href = '/Administrador/Crear'">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Agregar Administrador
            </button>
        </h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="text-align:left;">Nombre</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var u in Model)
            {
                    <tr>
                        <td>@u.NombreUsuario</td>
                        <td style="width:200px;">
                            <a title="Editar" href="~/Administrador/Editar/@u.Id">Editar</a>
                            
                            <a title="Eliminar" onclick="return confirm('¿Esta seguro?');" href="~/Administrador/Eliminar/@u.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>