@model ProyectoWeb.ViewModel.CatalogoViewModel.ListarArticuloViewModel
@{
    ViewBag.Title = "ListaArticulos";
}

<script src="~/Scripts/catalogoListarArticulo.js"></script>

<h2>Lista Articulos</h2>

@using (Html.BeginForm("ListaArticulos", "Catalogo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    //Seguridad
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.IdCategoria)
    //************************************************************************
    //MANEJO DE FILTROS
    //************************************************************************
    <div>
        <input type="hidden" id="CadenaFiltros" name="CadenaFiltros">
        <div>
            @foreach (var f in Model.FiltrosTotales)
            {
                if (!f.Color)
                {
                    @f.Nombre;
                    <input class="filtros" type="checkbox" id="ChkFil_@f.Id" name="@f.Nombre" value="@f.Id">
                    if (Model.FiltrosAplicados.Contains(f))
                    {
                        <script>
                        cargarFiltrosAnteriores(@f.Id)
                        </script>
                    }
                }
            }
        </div>
        <br>
        <div>
            @foreach (var f in Model.FiltrosTotales)
            {
                if (f.Color)
                {
                    @f.Nombre;
                    <input class="filtros" type="checkbox" id="ChkFil_@f.Id" name="@f.Nombre" value="@f.Id">
                    if (Model.FiltrosAplicados.Contains(f))
                    {
                        <script>
                        cargarFiltrosAnteriores(@f.Id)
                        </script>
                    }
                }
            }
        </div>
    </div>
    //************************************************************************
    //FIN MANEJO DE FILTROS
    //************************************************************************
    <br>
    <button type="submit" class="btn btn-default">Filtrar</button>
}
<hr>
<div class="row">
    @foreach (var c in Model.Articulos)
    {
        if (@c.Disponible)
        {
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <img src=@("/Imagenes/Articulos/"+ c.Imagenes.ElementAt(0).Img) alt="Imagen de Prueba" height="200" width="200">

                    <div class="caption">
                        <h3>@c.Codigo</h3>
                        <h4>@c.Nombre</h4>
                        <h5>Descripción <small>@c.Descripcion</small></h5>
                        
                        <h4>Stock: @c.Stock</h4>
                        <h4>Precio: $ @c.Precio</h4>
                        <div class="input-group">
                            <span class="input-group-addon" id="Cantidad1">Cantidad</span>
                            <input type="number" class="form-control" placeholder="Cantidad" aria-describedby="Cantidad1">
                        </div>

                        <br />

                        <p>
                            <a href="#" class="btn btn-primary pull-left" role="button">
                                Agregar <span class="glyphicon glyphicon-shopping-cart"></span>
                            </a>
                            <a href="#" class="btn btn-default pull-right" role="button">
                                Detalles <span class="glyphicon glyphicon-eye-open"></span>
                            </a>
                            <div class="clearfix"></div>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>

