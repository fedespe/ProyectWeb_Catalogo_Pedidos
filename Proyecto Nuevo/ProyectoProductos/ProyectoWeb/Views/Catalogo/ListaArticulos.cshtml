@model ProyectoWeb.ViewModel.CatalogoViewModel.ListarArticuloViewModel
@{
    ViewBag.Title = "ListaArticulos";
}

<script src="~/Scripts/catalogoListarArticulo.js"></script>
<div class="row">
    <div>
    @using (Html.BeginForm("ListaArticulos", "Catalogo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        //Seguridad
        @Html.AntiForgeryToken()

        @Html.HiddenFor(x => x.IdCategoria)
        //************************************************************************
        //MANEJO DE FILTROS
        //************************************************************************
        <div class="col-md-2 pull-left">
            <div>
                <h3>Categorías</h3>
                @foreach (var c in Model.Categorias)
                {
                    <a href="~/Catalogo/ListaArticulos/@c.Id?Nombre=@c.Nombre">@c.Nombre</a><br />
                }
            </div>
            <input type="hidden" id="CadenaFiltros" name="CadenaFiltros">
            <div>
                <h3>Filtros</h3>
                <h4>Material</h4>
                @foreach (var f in Model.FiltrosTotales)
                {
                    if (!f.Color)
                    {
                        <label class="checkbox-inline">
                            <input class="filtros" type="checkbox" id="ChkFil_@f.Id" name="@f.Nombre" value="@f.Id">
                            @f.Nombre
                        </label>
                        <br>
                        if (Model.FiltrosAplicados.Contains(f))
                        {
                            <script>
                                cargarFiltrosAnteriores(@f.Id)
                            </script>
                        }
                    }
                }
            </div>
            <br>
            <div>
                <h4>Color</h4>
                @foreach (var f in Model.FiltrosTotales)
                {
                    if (f.Color)
                    {
                        <label class="checkbox-inline">
                            <input class="filtros" type="checkbox" id="ChkFil_@f.Id" name="@f.Nombre" value="@f.Id">
                            @f.Nombre
                        </label>
                        <br>
                        if (Model.FiltrosAplicados.Contains(f))
                        {
                            <script>
                                cargarFiltrosAnteriores(@f.Id)
                            </script>
                        }
                    }
                }
            </div>           
            <br>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Filtrar</button>
        </div>
        //************************************************************************
        //FIN MANEJO DE FILTROS
        //************************************************************************
    }
    </div>
    <div class="col-md-10 pull-right">
        <h2>@Model.NombreCat</h2>
        @foreach (var c in Model.Articulos)
        {
            if (@c.Disponible)
            {
                <div class="col-md-4" style="padding-bottom:20px;">
                    <div class="thumbnail">
                        <img src=@("/Imagenes/Articulos/"+ c.Imagenes.ElementAt(0).Img) alt="Imagen de Prueba" style="width:100%; height:100%;">

                        <div class="caption">
                            <h3>@c.Codigo</h3>
                            <h4>@c.Nombre</h4>
                            <h5>Descripción <small>@c.Descripcion</small></h5>

                            <h4>Stock: @c.Stock</h4>
                            <h4>Precio: $ @c.Precio</h4>
                            <div class="input-group">
                                <span class="input-group-addon" id="Cantidad1">Cantidad</span>
                                <input type="number" class="form-control" placeholder="Cantidad" aria-describedby="Cantidad1">
                            </div>

                            <br />

                            <p>
                                <a href="#" class="btn btn-primary pull-left" role="button">
                                    Agregar <span class="glyphicon glyphicon-shopping-cart"></span>
                                </a>
                                <a href="~/Catalogo/DetalleArticulo/@c.Id" class="btn btn-default pull-right" role="button">
                                    Detalles <span class="glyphicon glyphicon-eye-open"></span>
                                </a>
                                <div class="clearfix"></div>
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

