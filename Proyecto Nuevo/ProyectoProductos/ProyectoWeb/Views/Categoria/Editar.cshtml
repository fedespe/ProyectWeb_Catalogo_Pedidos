@model ProyectoWeb.ViewModel.CategoriaViewModel.EditarViewModel
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Categoria", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    //Seguridad
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.categoria.Id)
    @Html.HiddenFor(x => x.ImgAnterior)

    //Lista de errores
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label>Imagen</label><br />
        <img src=@("/Imagenes/Categorias/" + Model.categoria.Img) height="150" width="150" />
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.Archivo)
            @Html.TextBoxFor(x => x.Archivo, new { type = "file" })
            @Html.ValidationMessageFor(x => x.Archivo, "", new { @class = "text-danger" })
        </div>*@

    <div>
        @*<label class="btn btn-primary btn-file">
                Seleccione una imágen <input type="file" name="Archivo" id="Archivo" style="display: none;">
            </label>*@
        <label class="btn btn-primary" for="Archivo">
            <input type="file" style="display:none;" name="Archivo" id="Archivo" onchange="$('#upload-file-info').html($(this).val());">
            Seleccione una imágen
        </label>
        <span class='label label-info' id="upload-file-info"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Nombre, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Nombre, new { @id = "nombre", @class = "form-control", @placeholder = "Nombre Categoría" })
        @Html.ValidationMessageFor(x => x.Nombre, "", new { @class = "text-danger" })
    </div> 

    <button type="submit" class="btn btn-default">Guardar</button>
}

