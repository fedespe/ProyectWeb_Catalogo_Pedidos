@model List<ET.Categoria>
@{
    ViewBag.Title = "ListaCategorias";
}

<div class="row">
    <div class="col-xs-12 col-md-2">
        <div>
            <h3>Gestión</h3>
            @Html.ActionLink("Gestión Clientes", "ListaClientes", "Cliente")<br />
            @Html.ActionLink("Gestión Articulos", "ListaArticulos", "Articulo")<br />
            @Html.ActionLink("Gestión Categorías", "ListaCategorias", "Categoria")<br />
            @Html.ActionLink("Gestión Pedidos", "Historico", "Pedido")
        </div>
    </div>
    <div class="col-md-10">
        <h2>
            Lista Categorías
            <button type="button" class="btn btn-success pull-right" OnClick="location.href = 'Crear'">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Agregar Categoría
            </button>
        </h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>
                            <img src=@("/Imagenes/Categorias/" + c.Img) height="50" width="50" />
                        </td>
                        <td>@c.Nombre</td>
                        <td>
                            <a title="Editar" href="~/Categoria/Editar/@c.Id">Editar</a>
                            |
                            <a title="Eliminar" onclick="return confirm('¿Esta seguro?');" href="~/Categoria/Eliminar/@c.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
