@if (Session["TipoUsuario"] != null)
{
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Mi Carrito (" + Convert.ToInt32(Session["CantidadProductosCarrito"]) + ")", "Editar", "Pedido", new { Id = Convert.ToInt32(Session["IdPedidoEnConstruccion"]) }, new { @id = "miCarrito" })
                @*<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>*@
            </li>
        </ul>

    if (Session["TipoUsuario"].ToString().Equals("Administrador"))
    {
    <ul class="nav navbar-nav navbar-right">
        @*<li>
            @Html.ActionLink("Gestión", "Gestion", "Home")
        </li>*@
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Gestión <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Gestión Administradores", "ListaAdministradores", "Administrador")</li>
                <li>@Html.ActionLink("Gestión Clientes", "ListaClientes", "Cliente")</li>
                <li>@Html.ActionLink("Gestión Articulos", "ListaArticulos", "Articulo")</li>
                <li>@Html.ActionLink("Gestión Categorías", "ListaCategorias", "Categoria")</li>
                <li>@Html.ActionLink("Gestión Pedidos", "Historico", "Pedido")</li> 
                <li>@Html.ActionLink("Configuración", "Editar", "Configuracion")</li>               
            </ul>
        </li>
        @*<li>
                @Html.ActionLink("Nombre Link", "Action", "Controller", new { Param = ParamValue }, null)
            </li>*@
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Sin Confirmar (" + Session["PedidosSinConfirmar"].ToString() + ")", "SinConfirmar", "Pedido", new { Id = Convert.ToInt32(Session["btnSinConfirmar"]) }, null)
        </li>
    </ul>
    }
    else if (Session["TipoUsuario"].ToString() == "Cliente")
    {
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Mis Pedidos", "ListarPorCliente", "Pedido", new { Id = Convert.ToInt32(Session["IdUsuario"]) }, null)
        </li>
    </ul>

    }
}
